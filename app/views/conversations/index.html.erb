<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2 account-container panel">
      <h3 class="account-heading" style="">Conversations
        <div class="iconmelon" style="float:left; padding-right:5px;">
          <svg viewBox="0 0 32 32">
            <g filter="">
              <use xlink:href="#mail"></use>
            </g>
          </svg>
         </div>
       </h3>
      <div class="account-username"> 
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-2">
            <h4 class="account-bolded">Inbox</h4>
          </div>
          <div class="col-lg-7 col-md-7 col-sm-7">
            <ul>
              <%= render mailbox.inbox %>
            </ul>
          </div>
        </div>
      </div>
      <div class="account-username"> 
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-2">
            <h4 class="account-bolded">Sent</h4>
          </div>
          <div class="col-lg-7 col-md-7 col-sm-7">
            <ul>
              <%= render mailbox.sentbox %>
            </ul>
          </div>
        </div>
      </div>
      <div class="account-username"> 
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-2">
            <h4 class="account-bolded">Trash</h4>
          </div>
          <div class="col-lg-7 col-md-7 col-sm-7">
            <ul>
              <%= render mailbox.trash %>
            </ul>
          </div>
        </div>
      </div>
       <%= link_to 'Start New Conversation!', :new_conversation %>
    </div>
  </div>
</div>
